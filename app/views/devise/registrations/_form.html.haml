= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal' }) do |form|
	.well.well-sm
		.row
			.form-group.col-lg-12
				= form.input :email, label: false,  input_html: { class: "form-control input-lg-12" }
		.row
			.form-group
				.col-lg-6
					= form.input :password, label: false,  input_html: { class: "form-control input-lg-6" }
				.col-lg-6
					= form.input :password_confirmation, label: false,  input_html: { class: "form-control input-lg-5" }
		.row
			.col-xs-4
				= form.button :submit, class: "btn btn-primary"
