= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', class:"login__box"}) do |f|
  .login_main
    %app-signin
      .form__title Sign In
      = devise_error_messages!
      = f.email_field :email, :autofocus => true, class:"email__field"
      = f.password_field :password, class:"password__field"
      - if devise_mapping.rememberable?
        = f.check_box :remember_me, class:"remember__field"
      - if devise_mapping.recoverable?
        = link_to "Forgot password?", new_password_path(resource_name)
      - if devise_mapping.registerable?
        = link_to "Sign Up", new_registration_path(resource_name), class:"sign-up__link"
