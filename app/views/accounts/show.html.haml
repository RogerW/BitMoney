%h2 Current Account

%span
    %b Title
    .title= @account.title
    
%span
    %b Balance:
    .balance= @account.balance

= simple_form_for(@add_fund, :url => account_account_add_funds_path(account_id: @account.id)) do |form|
    = form.error_notification
    = form.input :amount, label: "Amount Fund"
    = form.input :note
    = form.button :submit, 'Add Fund'
    
= render partial: 'account/transfers/form', locals: { transfer: @account_transfer, account_id: @account.id }
= render partial: 'shared/consumption', locals: {consumption: @add_consumption, account_id: @account.id}