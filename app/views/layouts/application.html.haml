!!!
%html{lang: "ru"}
  %head
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0", :charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : 'MoneyBit.me'
    %meta{:name => "description", :content => "#{content_for?(:description) ? yield(:description) : 'BitMoney'}"}

    = google_webfonts_init({google: ['Roboto Condensed', 'Open Sans', 'Kaushan Script', 'Roboto', 'RobotoDraft']})

    = stylesheet_link_tag "application", media: "all"
    = javascript_include_tag "application"
    = html_import_tag 'application'
    = csrf_meta_tags

  %body{unresolved:true,fullbleed:true, layout:true, vertical:true }
    %core-media-query#mediaQuery{query:"max-width: 640px"}
    %core-header-panel{mode:"waterfall", flex:true}
      = render :partial => "layouts/navigation"
      .main
        = yield
      .footer
        .footer__links
          = link_to "О нас", page_path('about')
        .footer__copyright{layout:true, center:true, horizontal:true}
          %span Copyright © MoneyBit.me 2015

